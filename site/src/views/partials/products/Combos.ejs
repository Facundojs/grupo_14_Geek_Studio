    <li>
        <article>
            <span class="article-image">
                <img class="article-image" src="/img/products/<%= product.dataValues.img %>" alt="<%=product.dataValues.name %>">
                <div class="article-description"><%=product.dataValues.name %></div>
            </span>
            <span>
                <div>
                    Precio
                </div>
                <div>
                    <%=product.dataValues.price %> 
