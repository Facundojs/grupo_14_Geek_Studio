<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<body>
    <%- include('./partials/header.ejs') %>
    <main>
        <div class="aligner-container">

              <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                  <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                  </div>
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                      <img src="/img/heros/Banner-1.jpg" class="d-block w-100" alt="Hero-1">
                    </div>
                    <div class="carousel-item">
                      <img src="/img/heros/Banner-2.jpg" class="d-block w-100" alt="Hero-2">
                    </div>
                    <div class="carousel-item">
                      <img src="/img/heros/Banner-3.png" class="d-block w-100" alt="Hero-3">
                    </div>
                  </div>
                  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"  data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                  </button>
                  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"  data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                  </button>
                </div>

                      <div class="row-category">
                        <% categories.forEach((category)=>{ %>
                        <div class="col-12">
                            <a href="/productos#<%= category.dataValues.name %>" class="sections-hrefs">
                              <div>
                                <img src="/img/sections/<%= category.dataValues.image %>" alt="" class="pic img-fluid rounded-circle"></img>
                                <p class="circle-title"><%= category.dataValues.name %></p>
                              </div>
                            </a>
                        </div>
                        <% }) %> 
                      </div>

                      <h2 class="categories">Ofertas destacadas</h2>
    
                      <div class="row-all">
                      <% products.forEach((product)=>{ %>
                      <div class="col-4">
                                <a href="/productos/<%= product.dataValues.id %>">
                                    <div class="image">
                                    <img src="/img/products/<%= product.dataValues.image %>" alt="<%=product.dataValues.name %>">
                                    </div>
                                    
                                    <div class="prod-description">
                                        <h4>
                                        <%=product.dataValues.name %>
                                        </h4> <!-- tienen que ser mÃ¡ximo 25 letras-->
                                    
                                        <p>
                                            $<%=product.dataValues.price %> 
                                        </p>
                                    </div>
    
                                    <div class="chart-button">
                                    <button id="#<%=product.dataValues.id %>"  type="submit">
                                        Agregar al carro <i class="fas fa-shopping-cart"></i>
                                    </button>
                                    </div>
    
                                  </a>
                                </div>
                            <% }); %> 
                  </div>
          </div>
    </main>
    <!-- Bootstrap JS -->
    <!-- para que funcionen las acciones de next y previos del carrusel-->
    <script src="/js/bootstrap.min.js"></script>
    <%- include('./partials/footer.ejs') %>
</body>
</html>