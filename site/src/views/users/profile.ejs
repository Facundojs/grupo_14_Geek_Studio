<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/header.ejs') %>
    <main>
    <div class="aligner-container" style="margin-top: 40px">
        <div class= "login-container"> 
            <h1>Bienvenido <i class="fas fa-user-circle"></i></h1> 
            
            <div class="container-profile">    
                    <h2 class="profile-user"> <%= user.first_name %>  <%= user.last_name %>  </h2> 
                    <div class="user-email"><%= user.email %> </div>
                    <img src="/img/users/<%= user.avatar %>" class ="img-profile"> 
                    <br>
                    <br>
            </div>

            <div class="container-profile-2"> 

                <div class="container-btn">
                    <% if ( locals.userLogged && locals.userLogged.user_type_id == 1)  { %>
                        <div>
                            <a class="btn-profile" href="/users/index">Index de usuarios</a>
                        </div>
                    <%  } %>
                    <% if(locals.isLogged){ %>
                </div>
                
                <div class="container-btn">
                    <form action="/users/<%= user.id %>/edit" method="GET">
                        <div>
                            <a class="btn-profile" href="/users/<%= user.id %>/edit">Editar</a>
                        </div>
                    </form>
                    
                    <form action="/users/<%= user.id%>?_method=DELETE" method="POST">
                        <div>
                            <button class="btn-profile-delete" type="submit">Borrar usuario</button>
                        </div>
                    </form>
                    <%} %> 
                </div>

            </div>

	    </div>
	    
    </div>

    <%- include('../partials/footer.ejs') %>
</body>
</html>