<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
    <%- include('../partials/header.ejs') %>
    <main> 
        <div class="aligner-container create-product">
            <div class="create-form">
                <form action="/productos/crear"  method="POST" class ="form-product" enctype="multipart/form-data">
                    <!-- Aca voy a tener que poner un nuevo div que encierre tanto el div del input como el error, y así para cada campo (field) -->
                    <div class="productName">
                        <input value="<%= locals.oldData ? oldData.name : null %>" type="text" name="name" id="name" placeholder="Nombre del producto" >
                    </div>
                    <% if (locals.errors && errors.name) { %>
                        <p class="feedback is-danger"><%= errors.name.msg %></p>
                    <% } %>
                    <div class="description">
                        <input value="<%= locals.oldData ? oldData.description : null %>" type="text-area" name="features" id="features" placeholder="Características" >
                    </div>
                    <% if (locals.errors && errors.features) { %>
                        <p class="feedback is-danger"><%= errors.features.msg %></p>
                    <% } %>
                    <div>
                        <input value="<%= locals.oldData ? oldData.price : null %>" type="number" name="price" id="price" placeholder="Precio" >
                    </div>
                    <% if (locals.errors && errors.price) { %>
                        <p class="feedback is-danger"><%= errors.price.msg %></p>
                    <% } %>
                    <div>
                        <input type="number" name="discount" id="discount" placeholder="Descuento" max=50>
                    </div>
                    <div class="product-category">
                        
                        <select name="category" id="category" placeholder="Categoría" >
                            <option>Seleccione una categoría</option>
                            <% 
                                let categories = [
                                    'silla', 'perifericos', 'gabinete', 'componentes','combos',
                                    'Motherboards', 'Memorias', 'Procesadores', 'Almacenamiento', 'Pantallas', 'Placas de video', 'Oficina'
                                ]
                            %> 
                            <!-- <% for (const oneCategory of categories) { %> 
                                <option value="<%= oneCategory %>"><%= oneCategory %></option>
                            <% } %>  -->
                                <option value="1">Componentes</option>
                                <option value="2">Perifericos</option>
                                <option value="3">Gabinetes</option>
                                <option value="4">Sillas</option>
                                <option value="5">Combos</option>
                        </select>
                        
                    </div>
                    <div class="file-div">
                        <label for="image">Seleccionar imagen/es</label>
                        <input type="file" class="file" name="image" id="image" placeholder="Imagen/es" >
                    </div>
                    <div class="extra">
                        <input type="text-area" name="anythingElse" id="anythingElse" placeholder="Otras consideraciones" >
                    </div>
                    <input class="btn-login" type="submit" value="Crear">
                    <input class="btn-login" type="reset" value="Borrar">
                </form>
            </div>
        </div>
    </main>
    <%- include('../partials/footer.ejs') %> >
</body>
</html>