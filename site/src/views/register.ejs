    <main>
        <div class="aligner-container">
            <div class= "login-container"> 
                <form class="login">
                    <h1 class="h1-login"> COMPLETA TUS DATOS </h1>

                    <div class="contenedor-registro">
                        <div class="flex-item"> <label>E-mail: </label> </div>
                        <div class="flex-item">
                           <!--<i class="fas fa-user-circle" icon-login> </i> !-->
                           <input class= "input-login" type="email" name="Email"  placeholder="E-Mail">                 
                        </div>
                        
                        <div class="flex-item"> <label>Nombre: </label> </div>
                        <div class="flex-item">
                            <!--<i class="fas fa-user-circle" icon-login> </i> !-->
                            <input class= "input-login" type="text" name="name"  placeholder="Nombre">                 
                         </div>

                         <div class="flex-item"> <label>Apellido: </label> </div>
                         <div class="flex-item">
                            <!--<i class="fas fa-user-circle" icon-login> </i> !-->
                            <input class= "input-login" type="text" name="surname"  placeholder="Apellido">                 
                         </div>

                         <div class="flex-item"> <label>Telefono: </label> </div>
                         <div class="flex-item">
                            <!--<i class="fas fa-user-circle" icon-login> </i> !-->
                            <input class= "input-login" type="tel" name="telephone"  placeholder="Telefono">
                         </div>

                        <div class="flex-item"> <label>Clave:  </label> </div>
                        <div class="flex-item"> 
                            <!--<i class="fas fa-unlock-alt" icon-login></i> !-->
                            <input class= "input-login"type="password" name="pass" placeholder="Ingrese Clave"> 
                        </div>        

                        <div class="flex-item"> <label>Repetir Clave:  </label> </div>
                        <div class="flex-item"> 
                            <!--<i class="fas fa-unlock-alt" icon-login></i> !-->
                            <input class= "input-login"type="password" name="pass2" placeholder="Repetir Clave"> 
                        </div>        
                        <div class="flex-item-button">
                            <input type="submit" value ="Registrate" class="button-login button-login-centrar">
                        </div>
                    </form>    
                </div>
            </div> 
        </div>  
    </main>
